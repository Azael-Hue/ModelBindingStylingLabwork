@model UserProfile

@{
    ViewData["Title"] = "J. Doe profile page";
}

<h1 class="display-2 text-center">Profile Page</h1>

<div>
    <br />
    <h4 class="lead">UserProfile</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2" style="background-color:#A9A9A9">
            @Html.DisplayNameFor(model => model.UserProfileId)
        </dt>
        <dd class="col-sm-10" style="background-color: #F5F5F5">
            @Model.UserProfileId
        </dd>
        <dt class="col-sm-2" style="background-color:#D3D3D3">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10" style="background-color: #F5F5F5">
            @Model.FullName
        </dd>
        <dt class="col-sm-2" style="background-color:#A9A9A9">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10" style="background-color: #F5F5F5">
            @Model.Email
        </dd>
        <dt class="col-sm-2" style="background-color:#D3D3D3">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10" style="background-color: #F5F5F5">
            @Model.PhoneNumber
        </dd>
        <dt class="col-sm-2" style="background-color:#A9A9A9">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10" style="background-color: #F5F5F5">
            @Model.ImageUrl
        </dd>
        <dt class="col-sm-2" style="background-color:#D3D3D3">
            @Html.DisplayNameFor(model => model.GitHubUrl)
        </dt>
        <dd class="col-sm-10" style="background-color: #F5F5F5">
            @Model.GitHubUrl
        </dd>
        <dt class="col-sm-2" style="background-color:#A9A9A9">
            Skilled Languages
        </dt>
        <dd class="col-sm-10" style="background-color: #F5F5F5">
            <ol >
                @foreach(string languageSkill in Model.SkilledLanguages)
                {
                    <button type="button" class="btn btn-outline-info btn-lg">
                        @languageSkill
                    </button>
                }
            </ol>
        </dd>
    </dl>
</div>
